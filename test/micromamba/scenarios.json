{
    "install-specific-version": {
        "image": "debian:stable-slim",
        "features": {
            "micromamba": {
                "version": "0.27.0"
            }
        }
    },
    "test-no-reinstall": {
        "image": "mambaorg/micromamba:0.26.0",
        "features": {
            "micromamba": {
                "version": "1.0.0"
            }
        }
    },
    "test-reinstall": {
        "image": "mambaorg/micromamba:0.25.0",
        "features": {
            "micromamba": {
                "version": "1.0.0",
                "allowReinstall": true
            }
        }
    },
    "test-conda-forge": {
        "image": "debian:stable-slim",
        "features": {
            "micromamba": {
                "channels": "conda-forge"
            }
        }
    },
    "test-multiple-channels": {
        "image": "debian:stable-slim",
        "features": {
            "micromamba": {
                "channels": "conda-forge,defaults"
            }
        }
    },
    "test-packages-option": {
        "image": "debian:stable-slim",
        "features": {
            "micromamba": {
                "channels": "conda-forge",
                "packages": "python,r-base"
            }
        }
    },
    "test-specfile-option-non-root": {
        "build": {
            "dockerfile": "Dockerfile"
        },
        "features": {
            "micromamba": {
                "envFile": "/tmp/specfile.yml"
            }
        }
    },
    "test-packages-option-non-root": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
        "features": {
            "micromamba": {
                "channels": "conda-forge",
                "packages": "python"
            }
        }
    },
    "test-text-specfile": {
        "build": {
            "dockerfile": "Dockerfile"
        },
        "features": {
            "micromamba": {
                "envFile": "/tmp/specfile.txt",
                "envName": "testenv"
            }
        }
    }
}
