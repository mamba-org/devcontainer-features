{
    "name": "micromamba",
    "id": "micromamba",
    "version": "0.0.1",
    "description": "Installs micromamba, the fast cross-platform package manager.",
    "documentationURL": "https://github.com/eitsupi/mamba-devcontainer-features/tree/main/src/micromamba",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest",
                "1.0.0"
            ],
            "default": "latest",
            "description": "Exact version of Micromamba to install (must be X.Y.Z)"
        },
        "allowReinstall": {
            "type": "boolean",
            "default": false,
            "description": "Reinstall in case Micromamba already exists"
        },
        "addCondaForge": {
            "type": "boolean",
            "default": false,
            "description": "Add conda-forge channel to the config?"
        }
    },
    "containerEnv": {
        "MAMBA_ROOT_PREFIX": "/opt/conda",
        "PATH": "/opt/conda/bin:${PATH}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
